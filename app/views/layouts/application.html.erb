<!DOCTYPE html>
<html>
  <head>
    <title>RailsProjectStudyGroups</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <div class="nav-wrapper teal">
      <a href="/" class="brand-logo">My Study Groups</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/groups">View Study Groups</a></li>

        <% if session[:user_id] %>
        <li><%= link_to "Create Study Group", new_group_path %></li>
        <li><%= link_to "Edit Profile", edit_user_path(@user) %></li>
        <li><%= link_to "Sign Out", signout_path %></li>
        <% else %>
        <li><%= link_to "Sign up", signup_path %></li>
        <li><%= link_to "Sign In", signin_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
