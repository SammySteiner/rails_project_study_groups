<% if flash[:message] %>
<div>
  <%= flash[:message] %>
</div><br>
<% end %>

<h1>Create a Study Group</h1>

<%= form_for(@group) do |f| %>
<%= f.label :topic %>
<%= f.text_field :topic %>
<%= f.label :location %>
<%= f.text_field :location %>
<%= f.label :time %>
<%= f.datetime_field :time %>
<%= f.hidden_field :admin_id, value: @user.id %>
<a class="waves-effect waves-light btn"><%= f.submit "Create Study Group" %></a>
<% end %>
