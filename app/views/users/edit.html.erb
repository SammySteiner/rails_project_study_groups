<h1>Edit Your Profile:</h1>

  <% if flash[:message] %>
  <%= flash[:message] %>
  <% end %>

<%= form_for(@user, method: 'patch') do |f| %>
<div >
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div >
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>
<div>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</div>
<div >
  <%= f.submit "Submit", class: "waves-effect waves-light btn" %>
</div>
<% end %><br>

<%= form_tag ({controller: 'users', action: 'delete', method: 'post'}) do %>
  <input type=submit value="Delete My Profile", class="waves-effect waves-light btn">
<% end %>
