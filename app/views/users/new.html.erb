<div>
  <% if flash[:message] %>
  <%= flash[:message] %>
  <% end %>
</div><br>

<h1>New User Signup:</h1>

<%= form_for(@user) do |f| %>
<div >
  <%= f.label :name %>
  <%= f.text_field :name %>
</div><br>
<div >
  <%= f.label :password %>
  <%= f.password_field :password %>
</div><br>
<div>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</div><br>
<div >
  <%= f.submit "Create User", class:"waves-effect waves-light btn" %>
</div><br>
<% end %>
